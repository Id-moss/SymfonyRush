{% extends 'base.html.twig' %}

{% block menu %}

<li class="nav-item">
	<a class="nav-link" href="{{ path('listProducts') }}">Homepage</a>
</li>
<li class="nav-item">
	<a class="nav-link" href="{{ path('listProducts') }}">My Products</a>
</li>
<li class="nav-item">
	<a class="nav-link" href="{{ path('listProducts') }}">Categories</a>
</li>

{% endblock %}

{% block body %}

	{% block welcome %}
		{% for label, messages in app.flashes %}
		    {% for message in messages %}
		        <div class="alert alert-{{ label }}">
		            {{ message }}
		        </div>
		    {% endfor %}
		{% endfor %}
	{% endblock %}

	<div class="container">
		<ul class="list-group">
			{% for product in products %}
				<li class="list-group-item"><a href="">{{ product.title }}</a></li>
			{% endfor %}
			<li class="list-group-item"><a href="">Example</a>&nbsp;<span>Description</span>&nbsp;<span>Price</span></li>
			<li class="list-group-item"><a href="{{ path('addProducts') }}">Add New Product?</a></li>
  		</ul>
	</div>

{% endblock %}
